{
  "compilerOptions": {
    /* Base Options: */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "verbatimModuleSyntax": true,

    /* Strictness */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "checkJs": true,

    /* Bundled projects */
    "lib": ["dom", "dom.iterable", "ES2022"],
    "types": ["vite/client"],
    "noEmit": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "preserve",
    "incremental": true,

    /* Path Aliases */
    "rootDirs": [".", "./.react-router/types"],
    "baseUrl": ".",
    "paths": { "@/*": ["./app/*"] }
  },
  "include": ["*.config.ts", "app/**/*", ".react-router/types/**/*"],
  "exclude": ["node_modules"]
}
